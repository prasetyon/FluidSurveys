<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inspeksi_final_check"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="inspeksiFinal.InspeksiFinalCheckActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNamaBlok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blok 1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_username"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/blueLineLight"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_username"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/transparence_black"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:text="@string/proses"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edProsesBlok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="Steel Work Preparation 1"
                android:textSize="@dimen/input_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_username"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/transparence_black"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:text="@string/posisi_blok"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edPosisiBlok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="@dimen/input_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_username"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/transparence_black"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:text="Inspection Date"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edInsDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/input_text"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/visual_inspection"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/help"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:onClick="help"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/blackborder"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:layout_weight="1"
                        android:text="Standard"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edStandard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/blackborder"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <CheckBox
                        android:id="@+id/cbVisualCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cbVisualCondition"
                        android:layout_centerVertical="true"
                        android:text="Visual Condition"
                        android:textColor="@color/black"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/ivVisualCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blackborder"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <CheckBox
                        android:id="@+id/cbMissCoat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cbMissCoat"
                        android:layout_centerVertical="true"
                        android:text="Miss Coat"
                        android:textColor="@color/black"/>

                </RelativeLayout>
                <ImageView
                    android:id="@+id/ivMissCoat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blackborder"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <CheckBox
                        android:id="@+id/cbPinholes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cbPinholes"
                        android:layout_centerVertical="true"
                        android:text="Pinholes"
                        android:textColor="@color/black"/>

                </RelativeLayout>
                <ImageView
                    android:id="@+id/ivPinholes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blackborder"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <CheckBox
                        android:id="@+id/cbBubbles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cbBubbles"
                        android:layout_centerVertical="true"
                        android:text="Bubbles"
                        android:textColor="@color/black"/>

                </RelativeLayout>
                <ImageView
                    android:id="@+id/ivBubbles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blackborder"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <CheckBox
                        android:id="@+id/cbVoids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cbVoids"
                        android:layout_centerVertical="true"
                        android:text="Voids"
                        android:textColor="@color/black"/>

                </RelativeLayout>
                <ImageView
                    android:id="@+id/ivVoids"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blackborder"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <CheckBox
                        android:id="@+id/cbHoliday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cbHoliday"
                        android:layout_centerVertical="true"
                        android:text="Holiday"
                        android:textColor="@color/black"/>

                </RelativeLayout>
                <ImageView
                    android:id="@+id/ivHoliday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blackborder"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small">

                    <CheckBox
                        android:id="@+id/cbOtherDefect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/cbOtherDefect"
                        android:layout_centerVertical="true"
                        android:text="Other Defect"
                        android:textColor="@color/black"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/ivOtherDefect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blackborder"/>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NDFT Film Thickness Measurements"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:background="@drawable/blackborder">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Minimum NDFT"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edMinNDFT"
                        android:layout_width="@dimen/input_box_med"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:inputType="numberDecimal"
                        android:background="@drawable/blackborder"
                        android:hint="-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Maximum NDFT"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edMaxNDFT"
                        android:layout_width="@dimen/input_box_med"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:inputType="numberDecimal"
                        android:background="@drawable/blackborder"
                        android:hint="-"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DFT Film Thickness Measurements"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:background="@drawable/blackborder">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/area"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edArea"
                        android:layout_width="@dimen/input_box_med"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:inputType="numberDecimal"
                        android:background="@drawable/blackborder"
                        android:hint="-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/number_of_test_point"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edTestPoint"
                        android:layout_width="@dimen/input_box_med"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:inputType="number"
                        android:background="@drawable/blackborder"
                        android:hint="-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/min_dft"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edMinDFT"
                        android:layout_width="@dimen/input_box_med"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:inputType="numberDecimal"
                        android:background="@drawable/blackborder"
                        android:hint="-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/max_dft"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edMaxDFT"
                        android:layout_width="@dimen/input_box_med"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:inputType="numberDecimal"
                        android:background="@drawable/blackborder"
                        android:hint="-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/avg_dft"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edAvgDFT"
                        android:layout_width="@dimen/input_box_med"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:inputType="numberDecimal"
                        android:background="@drawable/blackborder"
                        android:hint="-"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Final Coating Condition Confirm"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:background="@drawable/blackborder">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/type_of_defect"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edTypeOfDefect"
                        android:layout_width="@dimen/input_box_med"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:inputType="text"
                        android:background="@drawable/blackborder"
                        android:hint="-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/repair_method"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edRepairMethod"
                        android:layout_width="@dimen/input_box_med"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:inputType="text"
                        android:background="@drawable/blackborder"
                        android:hint="-"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/repair_confirm"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/edRepairConfirmDate"
                        android:layout_width="@dimen/input_box_med"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:inputType="datetime"
                        android:background="@drawable/blackborder"
                        android:hint="dd/mm/yyyy"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/inspection_documentation"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivDocumentation1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"/>

                <ImageView
                    android:id="@+id/ivDocumentation2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"/>

                <ImageView
                    android:id="@+id/ivDocumentation3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small">

                <ImageView
                    android:id="@+id/ivDocumentation4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"/>

                <ImageView
                    android:id="@+id/ivDocumentation5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"/>

                <ImageView
                    android:id="@+id/ivDocumentation6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/blackborder"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/comment"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/edBlockComment"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/blackborder"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:background="@color/blueLineLight"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/text_username"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/transparence_black"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_small"
                android:paddingRight="@dimen/padding_small"
                android:text="@string/nama_dokumen"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNamaDokumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="@dimen/btn_bottom"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_bottom"
                    android:textStyle="bold"
                    android:text="@string/back_btn"/>

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="@dimen/btn_bottom"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/text_bottom"
                    android:textStyle="bold"
                    android:text="@string/update_btn"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
