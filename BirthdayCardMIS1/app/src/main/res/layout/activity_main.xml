<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/birthdaycake"
    tools:context="com.example.prasetyon.birthdaycardmis1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutHbd">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/medium_horizontal_margin"
            android:paddingRight="@dimen/medium_horizontal_margin"
            android:text="@string/happy"
            android:textSize="@dimen/text_medium"
            android:layout_weight="1"
            android:gravity="end"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_horizontal_margin"
            android:text="@string/birthday"
            android:textSize="@dimen/text_medium"
            android:layout_weight="1"
            android:gravity="left"
            android:fontFamily="sans-serif"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutName"
        android:layout_below="@+id/layoutHbd">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/medium_horizontal_margin"
            android:paddingRight="@dimen/medium_horizontal_margin"
            android:textSize="@dimen/text_medium"
            android:layout_weight="1"
            android:gravity="end"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:id="@+id/tvFirstName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_horizontal_margin"
            android:textSize="@dimen/text_medium"
            android:layout_weight="1"
            android:gravity="left"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:id="@+id/tvLastName"/>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/btn_switch"
        android:layout_height="@dimen/btn_switch"
        android:layout_centerVertical="true"
        android:src="@drawable/buttonback"
        android:id="@+id/btnBack"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:layout_width="@dimen/btn_switch"
        android:layout_height="@dimen/btn_switch"
        android:layout_centerVertical="true"
        android:src="@drawable/buttonnext"
        android:id="@+id/btnNext"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
