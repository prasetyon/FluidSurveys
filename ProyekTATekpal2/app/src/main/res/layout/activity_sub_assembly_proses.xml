                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Welding Current"
                            android:textColor="@color/black"
                            android:layout_weight="3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edWeldingCurrent"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"/>
                            <EditText
                                android:id="@+id/edStdWeldingCurrent"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"
                                android:hint="standard"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Polarity"
                            android:textColor="@color/black"
                            android:layout_weight="3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edPolarity"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"/>
                            <EditText
                                android:id="@+id/edStdPolarity"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"
                                android:hint="standard"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Electrode Size"
                            android:textColor="@color/black"
                            android:layout_weight="3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edElectrodeSize"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"/>
                            <EditText
                                android:id="@+id/edStdElectrodeSize"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"
                                android:hint="standard"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Speed of Travel"
                            android:textColor="@color/black"
                            android:layout_weight="3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edSpeed"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"/>
                            <EditText
                                android:id="@+id/edStdSpeed"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"
                                android:hint="standard"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/text_username"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/line"
                    android:background="@color/transparence_black"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_small"
                    android:paddingRight="@dimen/padding_small"
                    android:text="@string/welding_condition"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/blackborder">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Sharp Edges"
                            android:textColor="@color/black"
                            android:layout_weight="3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edSharpEdges"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:background="@drawable/blackborder"/>
                            <EditText
                                android:id="@+id/edStdSharpEdges"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:background="@drawable/blackborder"
                                android:hint="standard"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Gap"
                            android:textColor="@color/black"
                            android:layout_weight="3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edGap"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:background="@drawable/blackborder"/>
                            <EditText
                                android:id="@+id/edStdGap"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:background="@drawable/blackborder"
                                android:hint="standard"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Imperfect Welding"
                            android:textColor="@color/black"
                            android:layout_weight="3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edImperfectWelding"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:background="@drawable/blackborder"/>
                            <EditText
                                android:id="@+id/edStdImperfectWelding"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:background="@drawable/blackborder"
                                android:hint="standard"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Miss Weld"
                            android:textColor="@color/black"
