                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"/>
                            <EditText
                                android:id="@+id/edStdPosition"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"
                                android:hint="standard"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Filter Metal Spec"
                            android:textColor="@color/black"
                            android:layout_weight="3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edFilterMetalSpec"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"/>
                            <EditText
                                android:id="@+id/edStdFilterMetalSpec"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"
                                android:hint="standard"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Filter Metal Class"
                            android:textColor="@color/black"
                            android:layout_weight="3"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edFilterMetalClass"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"/>
                            <EditText
                                android:id="@+id/edStdFilterMetalClass"
                                android:layout_weight="2"
                                android:layout_marginLeft="@dimen/margin_small"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/blackborder"
                                android:inputType="text"
                                android:hint="standard"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
